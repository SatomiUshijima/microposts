
<%= form_for(@user) do |f| %>
  <% if @user.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @user.errors.full_users.each do |full_user| %>
          <li>
            <%= full_user %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="user_name" class="col-sm-2 control-label">mail:</label>
    <div class="col-sm-10">
       <%= f.text_field :name, class:"form-control"  %>
   </div>
  </div>
  <br/>
  <div class="form-group">
    <label for="user_email" class="col-sm-2 control-label">mail:</label>
    <div class="col-sm-10">
       <%= f.email_field :email, class:"form-control"  %>
   </div>
  </div>
  <br/>
    <div class="form-group">
    <label for="user_location" class="col-sm-2 control-label">location:</label>
    <div class="col-sm-10">
      <%= f.text_field :location, class:"form-control"  %>
   </div>
  </div>
  <br/>
  <div class="form-group">
    <label for="user_profile" class="col-sm-2 control-label">profile:</label>
    <div class="col-sm-10">
      <%= f.text_area :profile, class:"form-control"%>
    </div>
  </div>
  <div class="form-group">
    <label for="user_profile" class="col-sm-2 control-label">password:</label>
    <div class="col-sm-10">
      <%= f.password_field :password, class:"form-control"%>
    </div>
  </div>
  <div class="form-group">
    <label for="user_profile" class="col-sm-2 control-label">password_confirmation:</label>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class:"form-control"%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>

<% end %>
